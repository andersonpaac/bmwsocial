<h1>Chats#new</h1>
<div class="col-md-6 col-md-offset-3">
    <%= form_for(:chat, url: chats_path) do |f| %>
      <%= f.label :handle %>
      <%= f.email_field :handle, class: "form-control" %>
      <%= f.label :content%>
      <%= f.text_field :content %>
      <%= f.submit "Create Chat Message", class: "btn btn-primary" %>
      <% end %>
</div>